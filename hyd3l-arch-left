# Conkyrc by Hyd3L

background no
use_xft yes
xftfont Hack:size=8
xftalpha 0.8
update_interval 2
total_run_times 0
own_window yes
own_window_type normal
own_window_argb_value 0
own_window_argb_visual yes
own_window_colour 000000
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 220 5
maximum_width 300
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders yes
default_color white
default_shade_color black
alignment top_left
gap_x 12
gap_y 64
no_buffers yes
cpu_avg_samples 2
override_utf8_locale no
uppercase yes

TEXT
STORAGE ${hr 2}

Read ${diskio_read /dev/sda} ${alignr} Write ${diskio_write /dev/sda}
${diskiograph_read /dev/sda 25, 107} ${alignr}${diskiograph_write /dev/sda 25,107}
MODEL: $alignr Drevo ES SSD
SIZE: $alignr 128 GB
TEMP: $alignr ${exec sudo hddtemp /dev/sda | cut -b 25-26}C

/ ${alignr}${fs_used /} / ${fs_size /}
${fs_bar 3 /}

/boot ${alignr}${fs_used /boot} / ${fs_size /boot}
${fs_bar 3 /boot}


NETWORK ${hr 2}

Down ${downspeedf wlp3s0} ${alignr}Up ${upspeedf wlp3s0}
${downspeedgraph wlp3s0 25,107} ${alignr}${upspeedgraph wlp3s0 25,107}
Total ${totaldown wlp3s0} ${alignr}Total ${totalup wlp3s0}
